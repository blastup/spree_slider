<% content_for :slide_location_title do %>
  <%= link_to Spree.t(:slide_locations), admin_slide_location_path %> /
  <%= @slide_location.id %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_slide_location_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'eye-open', Spree.t(:details), edit_admin_slide_location_url(@slide_location) %>
    <% end if can?(:admin, Spree::SlideLocation) %>
    <%= content_tag :li, class: ('active' if current == :slides) do %>
      <%= link_to_with_icon 'film', Spree.t(:slides), spree.admin_slide_location_slides_url(@slide_location) %>
    <% end if can?(:admin, Spree::Slide) %>
  </ul>
<% end %>